@using RenovationWorkContracts.ViewModels
@model List<WarehouseViewModel>
@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">Warehouses</h1>
</div>
<div class="text-center">
    @{
        if (Model == null)
        {
            <h3 class="display-4">Login</h3>
            return;
        }
        <p>
            <a asp-action="Create">Create warehouse</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Number
                    </th>
                    <th>
                        Warehouse
                    </th>
                    <th>
                        Responsible Fullname
                    </th>
                    <th>
                        Date create
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WarehouseName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ResponsibleFullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateCreate)
                        </td>
                        <td>
                            <a asp-action="Editing" asp-route-warehouseId="@item.Id"
                               asp-route-warehouseName="@item.WarehouseName" responsible="@item.ResponsibleFullName">Change warehouse</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
