@using RenovationWorkContracts.ViewModels
@model ClientViewModel
@{
    ViewData["Title"] = "Privacy Policy";
}
<div class="text-center">
    <h2 class="display-4">Personal data</h2>
</div>
<form method="post">
    <div class="row">
        <div class="col-4">Login:</div>
        <div class="col-8">
            <input type="text" name="login"
                   value="@Model.Login" />
        </div>
    </div>
    <div class="row">
        <div class="col-4">Password:</div>
        <div class="col-8">
            <input type="password" name="password"
                   value="@Model.Password" />
        </div>
    </div>
    <div class="row">
        <div class="col-4">Fullname:</div>
        <div class="col-8">
            <input type="text" name="fullname"
                   value="@Model.Fullname" />
        </div>
    </div>
    <div class="row">
        <div class="col-8"></div>
        <div class="col-4"><input type="submit" value="Save" class="btn btnprimary" /></div>
    </div>
</form>